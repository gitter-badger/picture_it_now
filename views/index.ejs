<div class="container">
<h1> Search Location </h1>

<% if(data === undefined) { %>
<p style = "color: red;">
<%= message %></p>
<% } %>



<form action="/search">
		<label for="search"></label>
		<input type="text" name="searchLoc" placeholder="Search Location"></input>
		<input type="submit"></input>
</form>



<!-- Paris -->
<div class="row-md-4">
  <div class="col-sm-2 col-md-4">
    <div class="thumbnail">
